<% layout('layouts/boilerplate') %> 

<h2>Edit View</h2>
<form method="POST" action="/edit/<%= character._id %>?_method=PUT"  class="row g-3">
    <div class="col-md-6">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" name="character[name]" id="name" placeholder="Character Name" value="<%= character.name %>">
    </div>
    <div class="col-md-6">
        <label for="class" class="form-label">Class</label>
        <input type="text" name="character[class] "class="form-control" id="class" value="<%= character.class %>" placeholder="Character Class">
    </div>
    <div class="mb-3">
        <button class="btn btn-warning">Update Character</button>
    </div>
</form>

<form method="POST" action="/edit/<%= character._id %>?_method=DELETE">
    <button class="btn btn-danger mb-1">Delete Character</button>
</form>

<a class="btn btn-info" href="/view/<%= character._id %>" role="button">Cancel</a>


